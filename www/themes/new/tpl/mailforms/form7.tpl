<form class="ag-mail-form" method="post">
    <input type="hidden" name="form_id" value="7"/>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-12">
                <label class="col-sm-12">Ваше имя:</label>
                <input required name="f1" type="text" class="form-control" placeholder=""/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label class="col-sm-12">Ваш e-mail и/или телефон:</label>
                <input required name="f2" type="text" class="form-control" placeholder=""/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label class="col-sm-12">Ваше
                    сообщение:</label>
                <textarea name="f3" cols="30" rows="5" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn-orange"><i class="fa fa-envelope"></i> Отправить</button>
    </div>
</form>